<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--show result field-->
    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/btn_num"
        android:gravity="right"
        android:paddingTop="100dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="0"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.28" />

    <!--button field-->
    <!--1st row-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ce"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20px"
        android:background="@color/btn_cal"
        android:text="CE"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_text"
        app:layout_constraintWidth_percent="0.225"
        app:layout_constraintHeight_percent="0.132" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_c"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20px"
        android:background="@color/btn_cal"
        android:text="C"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn_ce"
        app:layout_constraintTop_toBottomOf="@+id/result_text"
        app:layout_constraintWidth_percent="0.225"
        app:layout_constraintHeight_percent="0.132" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_bs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20px"
        android:background="@color/btn_cal"
        android:text="BS"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn_c"
        app:layout_constraintTop_toBottomOf="@+id/result_text"
        app:layout_constraintWidth_percent="0.225"
        app:layout_constraintHeight_percent="0.132" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_divide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20px"
        android:background="@color/btn_cal"
        android:text="/"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn_bs"
        app:layout_constraintTop_toBottomOf="@+id/result_text"
        app:layout_constraintWidth_percent="0.225"
        app:layout_constraintHeight_percent="0.132" />

    <!--2nd row-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20px"
        android:background="@color/btn_num"
        android:text="7"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ce"
        app:layout_constraintWidth_percent="0.225"
        app:layout_constraintHeight_percent="0.132" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20px"
        android:background="@color/btn_num"
        android:text="8"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn_7"
        app:layout_constraintTop_toBottomOf="@+id/btn_c"
        app:layout_constraintWidth_percent="0.225"
        app:layout_constraintHeight_percent="0.132" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20px"
        android:background="@color/btn_num"
        android:text="9"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn_8"
        app:layout_constraintTop_toBottomOf="@+id/btn_bs"
        app:layout_constraintWidth_percent="0.225"
        app:layout_constraintHeight_percent="0.132" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_multiply"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20px"
        android:background="@color/btn_cal"
        android:text="*"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn_9"
        app:layout_constraintTop_toBottomOf="@+id/btn_divide"
        app:layout_constraintWidth_percent="0.225"
        app:layout_constraintHeight_percent="0.132" />

    <!--3rd row-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20px"
        android:background="@color/btn_num"
        android:text="4"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_7"
        app:layout_constraintWidth_percent="0.225"
        app:layout_constraintHeight_percent="0.132" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20px"
        android:background="@color/btn_num"
        android:text="5"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn_4"
        app:layout_constraintTop_toBottomOf="@+id/btn_8"
        app:layout_constraintWidth_percent="0.225"
        app:layout_constraintHeight_percent="0.132" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20px"
        android:background="@color/btn_num"
        android:text="6"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn_5"
        app:layout_constraintTop_toBottomOf="@+id/btn_9"
        app:layout_constraintWidth_percent="0.225"
        app:layout_constraintHeight_percent="0.132" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_minus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20px"
        android:background="@color/btn_cal"
        android:text="-"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn_6"
        app:layout_constraintTop_toBottomOf="@+id/btn_multiply"
        app:layout_constraintWidth_percent="0.225"
        app:layout_constraintHeight_percent="0.132" />

    <!--4th row-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20px"
        android:background="@color/btn_num"
        android:text="1"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_4"
        app:layout_constraintWidth_percent="0.225"
        app:layout_constraintHeight_percent="0.132" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20px"
        android:background="@color/btn_num"
        android:text="2"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn_1"
        app:layout_constraintTop_toBottomOf="@+id/btn_5"
        app:layout_constraintWidth_percent="0.225"
        app:layout_constraintHeight_percent="0.132" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20px"
        android:background="@color/btn_num"
        android:text="3"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn_2"
        app:layout_constraintTop_toBottomOf="@+id/btn_6"
        app:layout_constraintWidth_percent="0.225"
        app:layout_constraintHeight_percent="0.132" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_plus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20px"
        android:background="@color/btn_cal"
        android:text="+"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn_3"
        app:layout_constraintTop_toBottomOf="@+id/btn_minus"
        app:layout_constraintWidth_percent="0.225"
        app:layout_constraintHeight_percent="0.132" />

    <!--5th row-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_oppposite"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20px"
        android:background="@color/btn_cal"
        android:text="+/-"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_1"
        app:layout_constraintWidth_percent="0.225"
        app:layout_constraintHeight_percent="0.132" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20px"
        android:background="@color/btn_num"
        android:text="0"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn_oppposite"
        app:layout_constraintTop_toBottomOf="@+id/btn_2"
        app:layout_constraintWidth_percent="0.225"
        app:layout_constraintHeight_percent="0.132" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_dot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20px"
        android:background="@color/btn_cal"
        android:text="."
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn_0"
        app:layout_constraintTop_toBottomOf="@+id/btn_3"
        app:layout_constraintWidth_percent="0.225"
        app:layout_constraintHeight_percent="0.132" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_equal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20px"
        android:background="@color/btn_cal"
        android:text="="
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn_dot"
        app:layout_constraintTop_toBottomOf="@+id/btn_plus"
        app:layout_constraintWidth_percent="0.225"
        app:layout_constraintHeight_percent="0.132" />
</androidx.constraintlayout.widget.ConstraintLayout>